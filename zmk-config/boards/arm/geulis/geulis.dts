&spi0 {
	status = "okay";
	compatible = "nordic,nrf-spim";
	status = "okay";
	sck-pin = <19>;
	mosi-pin = <15>;
	cs-gpios = <&gpio0 17 GPIO_ACTIVE_HIGH>;

	ls0xx: ls0xx@0 {
		compatible = "sharp,ls0xx";
		label = "DISPLAY";
		spi-max-frequency = <2000000>;
		reg = <0>;
		width = <160>;
		height = <68>;
		// disp-en-gpios = <&gpio0 23 GPIO_ACTIVE_HIGH>;
	};
};

